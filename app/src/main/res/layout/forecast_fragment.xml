<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weather_gradient_background">

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:text="@string/forecast"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextView1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/current_weather"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/curCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:textColor="@color/white"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/curTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:textColor="@color/white"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/curEmoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_marginTop="32dp"
        android:layout_toStartOf="@id/curTemp"
        android:textColor="@color/white"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/curDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/curCity"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textAlignment="center" />
    <include
        android:id="@+id/firstDay"
        layout="@layout/forecast_item"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_below="@id/curDesc"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"/>
    <include
        android:id="@+id/secondDay"
        layout="@layout/forecast_item"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_below="@id/firstDay"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp" />
    <include
        android:id="@+id/thirdDay"
        layout="@layout/forecast_item"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_below="@id/secondDay"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp" />
</RelativeLayout>